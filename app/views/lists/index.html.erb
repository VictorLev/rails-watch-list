
<div class="d-flex justify-content-between align-items-center bg-black px-3">
  <div class="fs-1 text-white">
    <i class="fa-solid fa-film"></i>
  </div>
  <div class="text-decoration-none text-white">
    <%= link_to "My list", lists_path, class: "text-decoration-none text-white" %>
    <%= link_to "Create a movie list", new_list_path, class: "text-decoration-none text-white" %>
  </div>
</div>

<h1>My Lists</h1>

<ul>
  <% @lists.each do |list|%>
    <li><%= link_to list.name, list_path(list) %></li>
  <% end%>
</ul>
